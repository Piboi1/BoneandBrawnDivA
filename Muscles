<body>

    <canvas id="bg-canvas"></canvas>

    <header>
        <h1>Bio-Mecha Builder <span style="font-size: 0.5em; opacity: 0.7;">// Div A</span></h1>
        <div class="score-board">Systems Online: <span id="score">0</span>%</div>
    </header>

    <main>
        <!-- Muscle Bank -->
        <aside class="panel sidebar">
            <div class="section-title">Components</div>
            <div id="muscle-list">
                <!-- JS will populate this -->
            </div>
        </aside>

        <!-- Scanner / Body -->
        <section class="panel scanner">
            <div class="view-controls">
                <button class="view-btn active" onclick="switchView('front')">FRONT VIEW</button>
                <button class="view-btn" onclick="switchView('back')">BACK VIEW</button>
            </div>
            <div class="body-outline" id="skeleton-target">
                <!-- JS will populate drop zones -->
            </div>
        </section>

        <!-- General Knowledge -->
        <aside class="panel knowledge">
            <div class="section-title">Data Core</div>
            <div id="fact-container">
                <div class="fact-card">
                    <h4>Instruction</h4>
                    <p>Drag the muscle chips from the left to the correct glowing zones on the body scan.</p>
                </div>
                <button onclick="nextFact()" style="width:100%; padding:10px; background:var(--neon-purple); border:none; color:white; font-family:'Orbitron'; cursor:pointer;">ACCESS NEXT FILE</button>
            </div>
        </aside>
    </main>

    <div id="victory-modal">
        <h2>MISSION COMPLETE</h2>
        <p style="color:white; font-size: 1.2rem; margin-bottom: 30px;">Anatomy Integration: 100% // Ready for Competition</p>
        <button onclick="location.reload()">REBOOT SYSTEM</button>
    </div>

    <script>
        // --- DATA SETS ---

        const muscleData = {
            front: [
                { id: 'deltoid-f', name: 'Deltoid', top: '18%', left: '76%' },
                { id: 'deltoid-f2', name: 'Deltoid', top: '18%', left: '24%' },
                { id: 'pectoralis', name: 'Pectoralis Major', top: '22%', left: '50%' }, // Chest
                { id: 'biceps', name: 'Biceps', top: '28%', left: '78%' },
                { id: 'rectus-ab', name: 'Rectus Abdominis', top: '35%', left: '50%' }, // Abs
                { id: 'quadriceps', name: 'Quadriceps', top: '55%', left: '38%' }, // Thighs
                { id: 'tibialis', name: 'Tibialis Anterior', top: '75%', left: '35%' } // Shin area (simplified)
            ],
            back: [
                { id: 'trapezius', name: 'Trapezius', top: '15%', left: '50%' }, // Upper back/neck
                { id: 'deltoid-b', name: 'Deltoid (Back)', top: '18%', left: '24%' },
                { id: 'triceps', name: 'Triceps', top: '28%', left: '20%' },
                { id: 'latissimus', name: 'Latissimus Dorsi', top: '30%', left: '50%' }, // Mid back
                { id: 'gluteus', name: 'Gluteus Maximus', top: '45%', left: '50%' }, // Butt
                { id: 'hamstring', name: 'Hamstrings', top: '55%', left: '60%' }, // Back of thigh
                { id: 'gastrocnemius', name: 'Gastrocnemius', top: '75%', left: '62%' } // Calf
            ]
        };

        const generalKnowledge = [
            { title: "The 3 Types", text: "There are 3 types of muscle: Skeletal (moves bones), Cardiac (heart), and Smooth (organs)." },
            { title: "Voluntary?", text: "Skeletal muscles are 'Voluntary' (you choose to move them). Cardiac and Smooth are 'Involuntary'." },
            { title: "Teamwork", text: "Muscles work in pairs! When the Biceps contracts (shortens), the Triceps relaxes." },
            { title: "Fuel Up", text: "Calcium and Vitamin D are crucial for strong bones and muscle function. Drink that milk!" },
            { title: "Largest Muscle", text: "The Gluteus Maximus (buttock) is the largest muscle in the body." },
            { title: "Strongest Muscle", text: "Based on weight, the Masseter (jaw muscle) is the strongest!" },
            { title: "Tendon vs Ligament", text: "Tendons connect Muscle to Bone. Ligaments connect Bone to Bone." },
            { title: "Heart Beat", text: "Cardiac muscle never gets tired. It contracts automatically to pump blood." }
        ];

        // --- STATE MANAGEMENT ---

        let currentView = 'front';
        let placedMuscles = new Set();
        let totalMuscles = muscleData.front.length + muscleData.back.length;

        // --- INITIALIZATION ---

        function init() {
            renderMuscles();
            renderDropZones();
            setupDragAndDrop();
        }

        // --- RENDER FUNCTIONS ---

        function renderMuscles() {
            const list = document.getElementById('muscle-list');
            list.innerHTML = '';
           
            // Combine lists but filter out duplicates by name for the bank (e.g. only one "Deltoid" chip needed)
            const allMuscles = [...muscleData.front, ...muscleData.back];
            const uniqueNames = [...new Set(allMuscles.map(m => m.name))];

            uniqueNames.sort().forEach(name => {
                const div = document.createElement('div');
                div.className = 'muscle-chip';
                div.draggable = true;
                div.innerText = name;
                div.dataset.name = name;
                div.id = `chip-${name.replace(/\s/g, '')}`;
               
                div.addEventListener('dragstart', dragStart);
                list.appendChild(div);
            });
        }

        function renderDropZones() {
            const container = document.getElementById('skeleton-target');
            container.innerHTML = '';

            const data = muscleData[currentView];

            data.forEach(muscle => {
                const zone = document.createElement('div');
                zone.className = 'drop-zone';
                zone.style.top = muscle.top;
                zone.style.left = muscle.left;
                zone.dataset.targetName = muscle.name;
                zone.dataset.id = muscle.id;
               
                // If already placed, style it
                if(placedMuscles.has(muscle.id)) {
                    zone.classList.add('filled');
                    zone.innerText = "OK";
                } else {
                    zone.innerText = "?";
                }

                zone.addEventListener('dragover', dragOver);
                zone.addEventListener('dragleave', dragLeave);
                zone.addEventListener('drop', drop);

                container.appendChild(zone);
            });
        }

        function switchView(view) {
            currentView = view;
            document.querySelectorAll('.view-btn').forEach(b => b.classList.remove('active'));
            event.target.classList.add('active');
           
            // Animate transition
            const skeleton = document.getElementById('skeleton-target');
            skeleton.style.opacity = 0;
            setTimeout(() => {
                renderDropZones();
                skeleton.style.opacity = 1;
            }, 300);
        }

        // --- DRAG AND DROP LOGIC ---

        function dragStart(e) {
            e.dataTransfer.setData('text/plain', e.target.dataset.name);
            e.target.style.opacity = '0.5';
        }

        function dragOver(e) {
            e.preventDefault();
            if(!e.target.classList.contains('filled')) {
                e.target.classList.add('hovered');
            }
        }

        function dragLeave(e) {
            e.target.classList.remove('hovered');
        }

        function drop(e) {
            e.preventDefault();
            const draggedName = e.dataTransfer.getData('text/plain');
            const targetZone = e.target;
           
            targetZone.classList.remove('hovered');

            if (targetZone.classList.contains('filled')) return;

            // Logic: Does the dragged name match the target name?
            if (draggedName === targetZone.dataset.targetName) {
                // Success
                targetZone.classList.add('filled');
                targetZone.innerText = draggedName.substring(0, 3).toUpperCase();
                placedMuscles.add(targetZone.dataset.id);
               
                playSound('success');
                updateScore();
                checkWin();
            } else {
                // Fail
                targetZone.style.borderColor = 'red';
                setTimeout(() => targetZone.style.borderColor = 'rgba(255,255,255,0.3)', 500);
            }

            // Reset draggable opacity
            const chip = document.querySelector(`.muscle-chip[data-name="${draggedName}"]`);
            if(chip) chip.style.opacity = '1';
        }

        function updateScore() {
            const percentage = Math.floor((placedMuscles.size / totalMuscles) * 100);
            document.getElementById('score').innerText = percentage;
        }

        function checkWin() {
            if (placedMuscles.size === totalMuscles) {
                setTimeout(() => {
                    document.getElementById('victory-modal').style.display = 'flex';
                    createFireworks();
                }, 500);
            }
        }

        // --- KNOWLEDGE BASE ---
       
        function nextFact() {
            const container = document.getElementById('fact-container');
            // Remove old cards except button
            const oldCards = container.querySelectorAll('.fact-card');
            oldCards.forEach(c => c.remove());

            const randomFact = generalKnowledge[Math.floor(Math.random() * generalKnowledge.length)];
           
            const card = document.createElement('div');
            card.className = 'fact-card';
            card.innerHTML = `<h4>${randomFact.title}</h4><p>${randomFact.text}</p>`;
           
            container.prepend(card);
        }

        function playSound(type) {
            // Simple synth beep using Web Audio API (no external files needed)
            const ctx = new (window.AudioContext || window.webkitAudioContext)();
            const osc = ctx.createOscillator();
            const gain = ctx.createGain();
           
            osc.connect(gain);
            gain.connect(ctx.destination);
           
            if (type === 'success') {
                osc.type = 'sine';
                osc.frequency.setValueAtTime(440, ctx.currentTime);
                osc.frequency.exponentialRampToValueAtTime(880, ctx.currentTime + 0.1);
                gain.gain.setValueAtTime(0.1, ctx.currentTime);
                gain.gain.exponentialRampToValueAtTime(0.01, ctx.currentTime + 0.3);
                osc.start();
                osc.stop(ctx.currentTime + 0.3);
            }
        }

        // --- PARTICLE BACKGROUND ---
        const canvas = document.getElementById('bg-canvas');
        const ctx = canvas.getContext('2d');
        let particles = [];

        function resizeCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();

        class Particle {
            constructor() {
                this.reset();
            }
            reset() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.size = Math.random() * 2;
                this.speedX = (Math.random() - 0.5) * 0.5;
                this.speedY = (Math.random() - 0.5) * 0.5;
                this.color = Math.random() > 0.5 ? '#00f3ff' : '#bc13fe';
                this.alpha = Math.random() * 0.5;
            }
            update() {
                this.x += this.speedX;
                this.y += this.speedY;
                if (this.x < 0 || this.x > canvas.width || this.y < 0 || this.y > canvas.height) this.reset();
            }
            draw() {
                ctx.globalAlpha = this.alpha;
                ctx.fillStyle = this.color;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        for (let i = 0; i < 100; i++) particles.push(new Particle());

        function animateBG() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            particles.forEach(p => {
                p.update();
                p.draw();
            });
            requestAnimationFrame(animateBG);
        }

        animateBG();
       
        // Load initial fact
        nextFact();
        init();

    </script>
</body>
</html>
